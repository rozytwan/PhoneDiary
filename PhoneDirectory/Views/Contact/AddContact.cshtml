                @Html.EditorFor(model => model.ContactNo1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ContactNo1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
